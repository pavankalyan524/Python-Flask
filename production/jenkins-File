pipeline{
    agent{
        label 'node-jenkins'
    }
    
    stages{
        stage("CHeckout "){
            steps{
                git branch: "main", url: "https://github.com/pavankalyan524/Python-Flask"
            }
        }
        stage("run tests"){
            steps{
                sh 'pytest -v'
            }
        }
        
        stage("Deployment"){
            steps{
                
                sshagent(['node-jenkins']){
                    sh '''
                    cd /home/ubuntu/Python-Flask/production/
                     sudo apt update && sudo apt install git python3 python3-pip -y
                    pip install -r requirements.txt && gunicorn -y
                    gunicorn -w 1 -b 0.0.0.0:8000 wsgi:app --daemon
                    '''
                }
                
            }
        }
    }
}
